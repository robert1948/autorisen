# -----------------------------
# App
# -----------------------------
APP_ENV=development
DEBUG=1
SECRET_KEY=change-me-dev-only
APP_HOST=0.0.0.0
APP_PORT=8000

# Optional: allow a local frontend
CORS_ORIGINS=http://localhost:3000,http://localhost:5173  # (container internal 5173, host 3000)

# -----------------------------
# Database (container hostname is "db")
# -----------------------------
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass
POSTGRES_DB=devdb
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://devuser:devpass@db:5432/devdb
ALEMBIC_DATABASE_URL=postgresql+psycopg://devuser:devpass@db:5432/devdb

# -----------------------------
# S3 / Object Storage
# Use real AWS S3 (leave S3_ENDPOINT_URL empty), or MinIO (see below)
# -----------------------------
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# If using **real** S3:
#AWS_S3_BUCKET_STATIC=your-static-bucket
#AWS_S3_BUCKET_MEDIA=your-media-bucket
#S3_ENDPOINT_URL=
#AWS_S3_FORCE_PATH_STYLE=0

# If using **MinIO** (uncomment these and comment-out real S3 bucket names above):
 AWS_ACCESS_KEY_ID=minioadmin
 AWS_SECRET_ACCESS_KEY=minioadmin
 S3_ENDPOINT_URL=http://minio:9000
 AWS_REGION=us-east-1
 AWS_S3_FORCE_PATH_STYLE=1
 AWS_S3_BUCKET_STATIC=cc-static
 AWS_S3_BUCKET_MEDIA=cc-media

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=info
