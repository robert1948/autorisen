name: Snapshot Project Plan
on:
  workflow_dispatch:
  schedule:
    - cron: "0 5 * * *"
  push:
    branches: [ main ]
    paths-ignore:
      - '.github/workflows/snapshot.yml'
      - 'snapshots/**'
      - 'data/plan.csv'

permissions:
  contents: write
  pull-requests: write

jobs:
  snapshot:
    if: github.actor != "github-actions[bot]"
    runs-on: ubuntu-latest
    env:
      BRANCH: bot/snapshot-${{ github.run_id }}
    steps:
      - name: Checkout repository
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          set -euo pipefail
          git config --global --add safe.directory "$GITHUB_WORKSPACE"
          git init .
          git remote add origin "https://x-access-token:${{ secrets.GITHUB_TOKEN }}@github.com/${{ github.repository }}.git"
          git fetch --no-tags --prune --depth=1 origin \
            +refs/heads/*:refs/remotes/origin/* \
            +refs/tags/*:refs/tags/* \
            +refs/pull/*:refs/remotes/pull/*
          git checkout --detach "${GITHUB_SHA}"

      - name: Validate plan.csv
        run: python3 tools/validate_plan_csv.py

      - name: Create snapshot branch
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          set -euo pipefail
          git switch -c "$BRANCH"
          mkdir -p snapshots
          ts=$(date -u +'%Y-%m-%dT%H-%M-%SZ')
          cp data/plan.csv "snapshots/plan-$ts.csv"
          git add snapshots/*.csv
          git -c user.name="github-actions[bot]" \
              -c user.email="41898282+github-actions[bot]@users.noreply.github.com" \
              commit -m "chore(snapshot): plan at $ts"
          git push -u origin "$BRANCH"

      - name: Open snapshot PR
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          set -euo pipefail
          gh pr create --title "Snapshot: plan.csv" --body "Automated plan snapshot." --base main --head "$BRANCH" || \
            gh pr view "$BRANCH" --json number && echo "PR already exists"
