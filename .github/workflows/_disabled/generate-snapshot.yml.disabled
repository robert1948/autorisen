name: Snapshot Project Plan (PR; no-marketplace)

on:
  workflow_dispatch:
  schedule:
    - cron: "0 5 * * *"

permissions:
  contents: write
  pull-requests: write

jobs:
  snapshot:
    runs-on: ubuntu-latest
    env:
      GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      BRANCH: bot/snapshot-${{ github.run_id }}
    steps:
      - name: Checkout
        run: |
          set -e
          git init .
          git config user.name  "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git remote add origin "https://x-access-token:${{ secrets.GITHUB_TOKEN }}@github.com/${{ github.repository }}.git"
          git fetch --depth=1 origin "${{ github.ref_name }}"
          git checkout -b "$BRANCH"

      - name: Generate snapshot (edit as needed)
        run: |
          python3 tools/snapshot_plan.py  # must write docs/autorisen_project_plan.csv

      - name: Stage & detect changes
        id: diff
        run: |
          git add -A
          if git diff --staged --quiet; then
            echo "changed=false" >> "$GITHUB_OUTPUT"
          else
            git commit -m "chore: snapshot project plan"
            echo "changed=true" >> "$GITHUB_OUTPUT"
          fi

      - name: Push branch
        if: steps.diff.outputs.changed == 'true'
        run: |
          git push -u origin "$BRANCH"

      - name: Open PR
        if: steps.diff.outputs.changed == 'true'
        run: |
          # gh CLI is preinstalled on ubuntu-latest
          gh pr create \
            --head "$BRANCH" \
            --base "${{ github.ref_name }}" \
            --title "Snapshot: project plan" \
            --body "Automated snapshot of docs/autorisen_project_plan.csv" \
            --label automation
